datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Properties {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  tokenId         String   @unique
  name            String
  description     String
  image           String
  attributes      Json
  properties      Json
  listed          Boolean  @default(false)
  isShared        Boolean  @default(false)
  canBid          Boolean  @default(false)  
  totalShares     Int?     // Only for fractional properties
  pricePerShare   Float?   // Only for fractional properties
  propertyToken   String?  // ERC20 token contract address for fractional properties
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}